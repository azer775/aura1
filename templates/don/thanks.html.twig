{% extends 'base.html.twig' %}

{% block title %}Thanks
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style>
		.container {
			background-color: #f5f5f5;
			padding: 20px;
			border: 1px solid #ccc;
		}
		h1 {
			color: #333;
			font-size: 36px;
			margin-bottom: 10px;
		}
		p {
			color: #666;
			font-size: 24px;
		}
		a {
			display: block;
			margin-top: 20px;
		}
	</style>
{% endblock %}
{% block body %}
	<div class="container">
		<h1>Thanks for your donation!</h1>
		{% for flash_message in app.session.flashbag.get('success') %}
			<div class="alert alert-success">{{ flash_message }}</div>
		{% endfor %}
		<p>Your generosity is greatly appreciated.</p>
		<a href="{{ path('app_association_index') }}">Back To List</a>
	</div>
	<script>
		{% if app.session.flashbag.get('success') is defined %}
window.alert("Donation Done Successfully!");{% endif %}
	</script>

{% endblock %}
