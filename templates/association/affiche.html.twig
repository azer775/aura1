        {% for ass in associations %}
            <tr>
                <td>{{ ass.id }}</td>
                <td>{{ ass.nom }}</td>
                <td>{{ ass.adresse }}</td>
                <td>{{ ass.rib }}</td>
                <td>{{ ass.email }}</td>
               {#<td>{{ ass.dons }}</td>#} 
                <td>
                <a href="{{ path('app_association_show', {'id': ass.id}) }}">show</a>   
